{% extends "base.twig" %}

{% block banner %}
	{% embed '/components/banner.twig' %}
		{% block content %}
			<h1 class="BannerTitle">{{archive_title}}</h1>
		{% endblock %}
	{% endembed %}
{% endblock %}

{% block content %}
	{{function('tha_content_before')}}
	<div class="content-sidebar-wrap">
		{{function('tha_content_top')}}
		{% block layout %}
			{% embed 'layouts/sidebar-right.twig' %}
				{% block content %}
					{% for post in posts %}
                        {% include 'components/tease.twig' %}
                    {% endfor %}
					{% include 'components/pagination.twig' %}
				{% endblock %}
				{% block sidebar %}
					<ul>
						{{primary_sidebar}}
					</ul>
				{% endblock %}
			{% endembed %}
		{% endblock %}
		{{function('tha_content_bottom')}}
	</div>
	{{function('tha_content_after')}}
{% endblock %}
