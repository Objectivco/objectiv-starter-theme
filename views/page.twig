{% extends "base.twig" %}

{% block banner %}
	{% embed '/components/banner.twig' %}
		{% block content %}
			<h1 class="BannerTitle">{{page.title}}</h1>
		{% endblock %}
	{% endembed %}
{% endblock %}

{% block layout %}
	{{function('tha_content_before')}}
	<div class="wrap">
		{{function('tha_content_top')}}
		{% embed '/layouts/full-width.twig' %}
			{% block content %}
				{% set sections = page.get_field('content_section') %}
				{% include 'components/sections.twig' with {sections:sections} %}
			{% endblock %}
		{% endembed %}
		{{function('tha_content_bottom')}}
	</div>
	{{function('tha_content_after')}}
{% endblock %}