{% block html_head_container %}
	{% include 'head.twig' %}
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig">
		{{function('tha_body_top')}}

		<!-- Site Container -->
		<div {{function('obj_attr', 'site-container')}}>

			<!-- Site Header -->
			{{function('tha_header_before')}}
				{% include 'header.twig' %}
			{{function('tha_header_after')}}

			<!-- Site Inner -->
			<div {{function('obj_attr', 'site-inner')}}>
				{{function('tha_content_before')}}
					<main {{function('obj_attr', 'content')}}>
						{{function('tha_content_top')}}
						{{function('tha_content_bottom')}}
					</main>
				{{function('tha_content_after')}}
			</div>

			<!-- Site Footer -->
			{% block footer %}
				{{function('tha_footer_before')}}
					{% include 'footer.twig' %}
				{{function('tha_footer_after')}}
			{% endblock %}

		</div>

		{{function('tha_body_bottom')}}
		{{function('wp_footer')}}
	</body>
</html>
