{% block html_head_container %}
	{% include 'head.twig' %}
{% endblock %}
	<body class="{{body_class}}" itemscope itemtype="http://schema.org/WebPage" data-template="base.twig">
		{{function('tha_body_top')}}

		<!-- Site Container -->
		<div class="avenir">

			<!-- Site Header -->
			{{function('tha_header_before')}}
				{% include('header.twig') %}
			{{function('tha_header_after')}}

			<!-- Page Banner -->
			{% block banner %}
				{% embed '/components/banner.twig' %}
					{% block content %}
						<h1 class="f2 f1-l mv0 lh-title">{{post.title}}</h1>
					{% endblock %}
				{% endembed %}
			{% endblock %}

			<!-- Site Inner -->
			{% block layout %}
				Sorry, no content
			{% endblock %}

			<!-- Site Footer -->
			{% block footer %}
				{{function('tha_footer_before')}}
					{% include('footer.twig') %}
				{{function('tha_footer_after')}}
			{% endblock %}

		</div>

		{{function('tha_body_bottom')}}
		{{function('wp_footer')}}
	</body>
</html>
