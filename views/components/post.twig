    <section class="PostContent" itemprop="mainEntityOfPage">
        {% include 'components/post/header.twig' %}
        <div class="PostBody" itemprop="articleBody">
            {{post.content}}
        </div>
        {% include 'components/post/footer.twig' %}
    </section><!--/itemprop=mainEntityOfPage-->
</article><!--/itemtype=BlogPosting-->